{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/:path*",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "env": [
    {
      "key": "VITE_API_URL",
      "description": "API endpoint URL (leave empty for localStorage demo)"
    },
    {
      "key": "VITE_SUPABASE_URL",
      "description": "Supabase project URL (optional, for future backend)"
    },
    {
      "key": "VITE_SUPABASE_KEY",
      "description": "Supabase anon key (optional, for future backend)"
    }
  ]
}
